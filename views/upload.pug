extends layouts/main.pug

block content
    .form-container
        form(action=`${routes.videos}${routes.upload}`, method="post")
            label(for="video") Video File 
            input(type="file", id="upload", name="upload", required=true)
            input(type="text", name="title", placeholder="Title", required=true)
            input(type="text", name="description", placeholder="Discription", required=true)
            input(type="submit", value="Upload Video")